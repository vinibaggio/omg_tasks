<h1>User's Task Lists</h1>

<p>
	<% if collection.blank? -%>
		There are no task lists.
	<% else -%>
		<% collection.each do |task_list| -%>
			<%= link_to task_list.title, user_task_list_path(@current_user, task_list)%>
		<% end -%>
	<% end if -%>
</p>
<p>
	<%= link_to "new task list", new_user_task_list_path(@current_user)%>
</p>